<% layout('layout') -%>

<div class="container">

  <div class="row">
    <div class="col-sm-6 col-md-4">

      <img class="img-center img-responsive" src="<%= user.profile.picture %>" alt="profile picture" />

      <br />
      <p>Name: <%= user.profile.name %></p>
      <p>Email: <%= user.email %></p>

      <% if (user.address === "" || typeof user.address === 'undefined')  { %>
        <p>Address: <span class="noAddress">You have no address</span></p>

      <% } else { %>

      <p>Address: <%= user.address %></p>

      <% } %>

      <a href="/edit-profile" class="btn btn-primary btn-md">Edit Profile</a>
    </div>

    <div class="col-sm-6 col-md-4">
      <h2 class="text-center">History</h2>

      <table class="table table-striped sticky-header">
        <thead>
          <tr>
            <th>Item Name</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i=0; i< user.history.length; i++) { %>
            <tr>
              <td><%= user.history[i].item.name %></td>
              <td><%= user.history[i].item.price %></td>
            </tr>
          <% } %>
        </tbody>

      </table>

    </div>

  </div>
</div>